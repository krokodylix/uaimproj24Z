<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.AgroMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_900</item>
        <item name="colorPrimaryDark">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/orange_900</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and Surface -->
        <item name="colorBackground">@color/white</item>
        <item name="colorSurface">@color/gray_500</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/gray_700</item>

        <!-- Error -->
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Light theme variant -->
    <style name="Theme.AgroMobile.Light" parent="Theme.AgroMobile">
        <item name="colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
    </style>

    <!-- Dark theme variant -->
    <style name="Theme.AgroMobile.Dark" parent="Theme.AgroMobile">
        <item name="colorBackground">@color/gray_700</item>
        <item name="colorOnBackground">@color/white</item>
    </style>

</resources>
